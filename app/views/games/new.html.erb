<div class="centered-container">
  <h1 class="game-title">Longest Word Game</h1>
  <p class="game-subtitle">Here are your letters:</p>

  <div class="letters-container">
    <% @letters.each do |letter| %>
      <div class="letter-box">
        <%= letter %>
      </div>
    <% end %>
  </div>

 <%= form_with url: score_game_path, method: :post, data: { turbo: false }, local: true do %>
  <%= hidden_field_tag :letters, @letters.join(" ") %>

  <div class="form-group" style="margin-top: 20px;">
    <label for="word_input">Your word:</label>
    <%= text_field_tag :word, '', id: 'word_input', class: 'form-control' %>
  </div>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag 'Submit', class: 'btn btn-primary', style: 'margin-top: 15px;' %>
<% end %>
